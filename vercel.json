{
  "rewrites": [
    { "source": "/fantasy", "destination": "/index.html" },
    { "source": "/fantasy/(.*)", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html", "status": 200 }
  ],
  "trailingSlash": false
} 